<!--
  TomatoFest.com Heirloom tomato recipe
-->

<recipe>
    <germination duration="604800">
      <cycle>

          <!--day time-->
          <period start="0" end="32399">

            <air>
              <temperature min="24" max="27" />
            </air>

            <!-- full band-->
            <light>
              <!--UV-->
              <band min="280" max="315">
                <ppfd min="100" max="100" />
              </band>
              <!--blue-->
              <band min="450" max="500">
                <ppfd min="100" max="100" />
              </band>
              <!--green-->
              <band min="500" max="570">
                <ppfd min="100" max="100" />
              </band>
              <!--red-->
              <band min="610" max="760">
                <ppfd min="100" max="100" />
              </band>
              <!--ir-->
              <band min="700" max="1000000">
                <ppfd min="100" max="100" />
              </band>
            </light>

          </period>

          <!-- night time -->
          <period start="32400" end="86399">
            <air>
              <temperature min="10" max="15.5" />
            </air>
          </period>

      </cycle>
    </germination>
</recipe>
