<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" elementFormDefault="qualified" attributeFormDefault="unqualified">

  <xs:element name="recipe">
    <xs:complexType>
      <xs:sequence>
        <xs:element name="name" type="xs:string"></xs:element>
        <xs:element name="stages">
          <xs:complexType>
            <xs:sequence>
              <xs:element name="stage" maxOccurs="7">
                <xs:complexType>
                  <xs:sequence>
                    <xs:element name="stageType">
                      <xs:simpleType>
                        <xs:restriction base="xs:string">
                          <xs:pattern value="s|g|se|j|a|f|d"/>
                        </xs:restriction>
                      </xs:simpleType>
                    </xs:element>
                    <xs:element name="metric" maxOccurs="12">
                      <xs:complexType>
                        <xs:sequence>
                          <xs:element name="metricType">
                            <xs:simpleType>
                              <xs:restriction base="xs:string">
                                <xs:pattern value="at|co2|dli|p|ppf|ppfd|rh|s|wec|wdo|wph|wt"/>
                              </xs:restriction>
                            </xs:simpleType>
                          </xs:element>
                          <xs:element name="minValue" type="xs:float"></xs:element>
                          <xs:element name="maxValue" type="xs:float"></xs:element>
                        </xs:sequence>
                      </xs:complexType>
                    </xs:element>
                  </xs:sequence>
                </xs:complexType>
              </xs:element>
            </xs:sequence>
          </xs:complexType>
        </xs:element>
      </xs:sequence>
    </xs:complexType>
  </xs:element>

</xs:schema>