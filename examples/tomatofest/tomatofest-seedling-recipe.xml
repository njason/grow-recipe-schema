<!--
  TomatoFest.com Heirloom tomato recipe

  Version 1 with stage cycles
-->

<recipe>
  <stages>
    <stage name="seedling" min="432000" max="1036800">
      <cycle>
        <period label="Day Time" start="0" end="32400">
          <metric name="air-temp" min="24" max="27" />
          <metric name="ppfd" min="500" max="500" />
        </period>
        <period label="Night Time" start="32401" end="54000">
          <metric name="air-temp" min="10" max="15.5" />
        </period>
      </cycle>
    </stage>
  </stages>
</recipe>
